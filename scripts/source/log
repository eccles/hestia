#
# add logging function
#
# this file is sourced - do not execute directly
#
COLOUR_RESET="\033[0m"

COLOUR_BLACK="\033[1;30m"
COLOUR_GRAY="\033[0;30m"
COLOUR_RED="\033[0;31m"
COLOUR_LIGHT_RED="\033[1;31m"
COLOUR_GREEN="\033[0;32m"
COLOUR_LIGHT_GREEN="\033[1;32m"
COLOUR_YELLOW="\033[1;33m"
COLOUR_BLUE="\033[0;34m"
COLOUR_LIGHT_BLUE="\033[1;34m"
COLOUR_PURPLE="\033[0;35m"
COLOUR_LIGHT_PURPLE="\033[1;35m"
COLOUR_CYAN="\033[0;36m"
COLOUR_LIGHT_CYAN="\033[1;36m"
COLOUR_LIGHT_GRAY="\033[0;37m"
COLOUR_WHITE="\033[1;37m"
COLOUR_UNDERLINE="\033[4m"
COLOUR_BLINK="\033[5m"

log_info() {
	echo -e "`date '+%F %T'` INF ${COLOUR_GREEN}$* ...${COLOUR_RESET}"
}
log_warn() {
	echo -e "`date '+%F %T'` WRN ${COLOUR_UNDERLINE}${COLOUR_YELLOW}$* ...${COLOUR_RESET}"
}
log_error() {
	echo -e "`date '+%F %T'` ERR ${COLOUR_BLINK}${COLOUR_RED}$* ...${COLOUR_RESET}"
}
log_fatal() {
	echo -e "`date '+%F %T'` FTL ${COLOUR_BLINK}${COLOUR_RED}$* ...${COLOUR_RESET}"
	exit 100
}

